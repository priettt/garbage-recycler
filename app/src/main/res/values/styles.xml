<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <style name="TotalLabelLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/total_field_margin_horizontal</item>
        <item name="android:layout_marginEnd">@dimen/total_field_margin_horizontal</item>
        <item name="android:layout_marginTop">@dimen/total_field_margin_top</item>
        <item name="android:focusable">false</item>
    </style>

    <style name="ActualLabelLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/total_field_margin_horizontal</item>
        <item name="android:layout_marginEnd">@dimen/total_field_margin_horizontal</item>
        <item name="android:focusable">false</item>
    </style>

    <style name="TotalLabelTextInput">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/zero</item>
        <item name="android:focusable">false</item>
    </style>

    <style name="NumberPickerButton">
        <item name="android:layout_width">0sp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="NumberPickerTextLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">3</item>
        <item name="android:layout_marginStart">@dimen/number_picker_margin_horizontal</item>
        <item name="android:layout_marginEnd">@dimen/number_picker_margin_horizontal</item>
    </style>

    <style name="NumberPickerTextInput">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/zero</item>
        <item name="android:inputType">number</item>
    </style>

    <style name="ActualPickerField">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/actual_field_margin_horizontal</item>
        <item name="android:layout_marginEnd">@dimen/actual_field_margin_horizontal</item>
        <item name="android:layout_marginTop">@dimen/actual_field_margin_top</item>
    </style>

</resources>
